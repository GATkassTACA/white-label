# Azure Environment Configuration
# Copy this file to .env.azure and fill in your actual values

# Flask Configuration
FLASK_ENV=production
SECRET_KEY=your-256-bit-secret-key-here
FLASK_DEBUG=False

# Azure App Service Configuration
WEBSITES_PORT=5000
SCM_DO_BUILD_DURING_DEPLOYMENT=true

# Database Configuration (Azure Database for PostgreSQL)
DATABASE_URL=postgresql://dbadmin:YourSecurePassword123!@white-label-db-server.postgres.database.azure.com:5432/whitelabel_chat?sslmode=require

# Redis Configuration (Azure Cache for Redis)
REDIS_URL=redis://:your-redis-key@white-label-redis.redis.cache.windows.net:6380/0?ssl_cert_reqs=required

# Email Configuration (using SendGrid on Azure)
MAIL_SERVER=smtp.sendgrid.net
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USERNAME=apikey
MAIL_PASSWORD=your-sendgrid-api-key
MAIL_DEFAULT_SENDER=noreply@yourdomain.com

# Security Configuration
WTF_CSRF_ENABLED=True
WTF_CSRF_TIME_LIMIT=3600
SESSION_COOKIE_SECURE=True
SESSION_COOKIE_HTTPONLY=True
SESSION_COOKIE_SAMESITE=Lax

# Rate Limiting
RATELIMIT_STORAGE_URL=redis://:your-redis-key@white-label-redis.redis.cache.windows.net:6380/1?ssl_cert_reqs=required
RATELIMIT_DEFAULT=1000 per hour

# File Upload Configuration
MAX_CONTENT_LENGTH=16777216
UPLOAD_FOLDER=/tmp/uploads

# Azure Application Insights
APPINSIGHTS_INSTRUMENTATIONKEY=your-app-insights-key
APPLICATIONINSIGHTS_CONNECTION_STRING=InstrumentationKey=your-app-insights-key

# Logging Configuration
LOG_LEVEL=INFO
LOG_TO_STDOUT=True

# Production Security Headers
FORCE_HTTPS=True
HSTS_ENABLED=True
HSTS_MAX_AGE=31536000

# Azure Storage (optional for file uploads)
AZURE_STORAGE_CONNECTION_STRING=DefaultEndpointsProtocol=https;AccountName=yourstorageaccount;AccountKey=your-storage-key;EndpointSuffix=core.windows.net
AZURE_STORAGE_CONTAINER=uploads

# OAuth Configuration (if using Azure AD)
AZURE_AD_CLIENT_ID=your-azure-ad-client-id
AZURE_AD_CLIENT_SECRET=your-azure-ad-client-secret
AZURE_AD_TENANT_ID=your-azure-ad-tenant-id

# API Keys for external services
OPENAI_API_KEY=your-openai-api-key
ANTHROPIC_API_KEY=your-anthropic-api-key

# Monitoring and Analytics
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
AZURE_MONITOR_ENABLED=True

# Production Database Pool Settings
DATABASE_POOL_SIZE=20
DATABASE_POOL_TIMEOUT=30
DATABASE_POOL_RECYCLE=3600

# Backup Configuration
BACKUP_ENABLED=True
BACKUP_SCHEDULE=0 2 * * *
AZURE_BACKUP_STORAGE_URL=your-backup-storage-url
