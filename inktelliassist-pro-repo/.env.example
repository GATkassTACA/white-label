# InktelliAssist Pro Environment Variables Template
# Copy this file to .env and fill in your actual values

# Database Configuration
DATABASE_HOST=your_database_host.postgres.database.azure.com
DATABASE_NAME=inktelliassist_db
DATABASE_USER=inktelliassist_admin
DATABASE_PASSWORD=your_secure_password_here
DATABASE_PORT=5432

# Flask Configuration
SECRET_KEY=your_very_secure_secret_key_here
FLASK_ENV=production
FLASK_DEBUG=False

# Azure Configuration (if using Azure services)
AZURE_STORAGE_CONNECTION_STRING=your_azure_storage_connection_string
AZURE_STORAGE_CONTAINER=documents

# Application Settings
APP_NAME=InktelliAssist Pro
BRAND_COLOR=#000000
ACCENT_COLOR=#DC143C
HIGHLIGHT_COLOR=#00BFFF

# AI Processing Settings
MAX_FILE_SIZE_MB=10
SUPPORTED_FORMATS=pdf
PROCESSING_TIMEOUT=30

# Security Settings
SESSION_TIMEOUT_HOURS=24
MAX_LOGIN_ATTEMPTS=5
REQUIRE_EMAIL_VERIFICATION=True

# SMTP Configuration (for email notifications)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_app_password
SMTP_USE_TLS=True

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=app.log

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_PERIOD=3600

# Backup Configuration
BACKUP_ENABLED=True
BACKUP_FREQUENCY_HOURS=24
BACKUP_RETENTION_DAYS=30

# Feature Flags
FEATURE_ANALYTICS=True
FEATURE_ADVANCED_PROCESSING=True
FEATURE_MULTI_LANGUAGE=False

# Integration Settings
WEBHOOK_URL=https://your-webhook-endpoint.com/tattoo-data
API_KEY=your_api_key_here

# Monitoring
HEALTH_CHECK_ENABLED=True
METRICS_ENABLED=True
SENTRY_DSN=your_sentry_dsn_here
