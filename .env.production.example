# Production Environment Variables Template
# Copy this to .env.production and fill in your actual values

# Application Configuration
FLASK_APP=run.py
FLASK_ENV=production
FLASK_DEBUG=False
FLASK_HOST=0.0.0.0
FLASK_PORT=5000

# Security Keys (REQUIRED - Generate these!)
# Use: python -c "import secrets; print(secrets.token_hex(32))"
SECRET_KEY=REPLACE_WITH_64_CHAR_SECRET_KEY
JWT_SECRET_KEY=REPLACE_WITH_64_CHAR_JWT_SECRET_KEY

# Database Configuration
# PostgreSQL (recommended for production)
DATABASE_URL=postgresql://username:password@host:port/database_name

# Redis (for sessions and caching)
REDIS_URL=redis://username:password@host:port/0

# Rate Limiting (Production Values)
RATE_LIMIT_MESSAGES_PER_MINUTE=30
RATE_LIMIT_CONNECTIONS_PER_IP=10
MAX_USERS_PER_ROOM=100
MAX_ROOMS_PER_USER=20
MAX_MESSAGE_LENGTH=500

# Email Configuration (for notifications)
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USERNAME=your-email@domain.com
MAIL_PASSWORD=your-app-password

# External Services
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# Domain Configuration
DOMAIN_NAME=yourdomain.com
ALLOWED_HOSTS=yourdomain.com,www.yourdomain.com

# Feature Flags
ENABLE_ANALYTICS=True
ENABLE_FILE_UPLOADS=True
ENABLE_VOICE_CHAT=False
ENABLE_VIDEO_CHAT=False
